{
  "name": "pkapi-ts",
  "version": "0.1.0",
  "description": "A typescript library for the PluralKit API",
  "types": "dist/main.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/main.d.ts",
        "default": "./dist/main.mjs"
      },
      "require": {
        "types": "./dist/main.d.cts",
        "default": "./dist/main.cjs"
      },
      "default": "./dist/main.mjs"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.mjs",
      "require": "./dist/*.cjs"
    }
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.13.1",
  "files": [
    "dist",
    "src",
    "bin"
  ],
  "scripts": {
    "start": "node --import tsx src/bin/cli.ts",
    "build": "tsc && tsup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run --coverage --dir __tests__",
    "test:integration": "bash integration/run.sh",
    "test:watch": "vitest watch --coverage --dir __tests__",
    "coverage:view": "open coverage/index.html",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "author": {
    "name": "Zowie",
    "email": "git@zowi.ee",
    "url": "https://github.com/z0w13"
  },
  "publishConfig": {
    "provenance": true,
    "access": "public"
  },
  "license": "Apache-2.0",
  "keywords": [
    "pluralkit, typescript, api"
  ],
  "homepage": "https://github.com/z0w13/pkapi-ts",
  "bugs": {
    "url": "https://github.com/z0w13/pkapi-ts/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/z0w13/pkapi-ts.git"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.7",
    "@types/node": "^20.14.10",
    "@types/pg": "^8.15.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.6.0",
    "eslint-plugin-security": "^3.0.1",
    "fetch-mock": "^12.5.3",
    "husky": "^9.0.11",
    "lint-staged": "^16.1.2",
    "neostandard": "^0.12.2",
    "pg": "^8.16.3",
    "pkg-pr-new": "^0.0.54",
    "tsup": "^8.1.0",
    "tsx": "^4.19.4",
    "typescript": "^5.5.3",
    "validate-conventional-commit": "^1.0.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "**/*.{js,json}": [
      "npm run lint:fix"
    ]
  },
  "dependencies": {
    "discord-snowflake": "^2.0.0",
    "ts-case-convert": "^2.1.0",
    "zod": "^4.0.5"
  }
}
